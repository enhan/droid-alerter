<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="eu.enhan.alerter">
    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="17"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <receiver android:name=".backend.EmailReceiver">
            <intent-filter>
                <action android:name="com.fsck.k9.intent.action.EMAIL_RECEIVED"/>
                <data android:scheme="email"/>
            </intent-filter>
        </receiver>
        <activity android:name=".ui.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.CreateFalseMailActivity"/>
        <activity android:name=".ui.MainSettingsActivity"/>
        <activity android:name=".ui.legacy.LegacySettingsActivity"/>

        <service android:name=".filter.EmailFilterService"/>
    </application>
</manifest>
